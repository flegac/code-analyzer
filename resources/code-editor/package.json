{
  "name": "code-editor",
  "version": "1.0.0",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "vite",
    "watch": "tsc -w",
    "start": "electron .",
    "start:build": "npm run build && npm run start",
    "build": "vite build && tsc",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/node": "^24.3.1",
    "electron": "^14.2.9",
    "electron-builder": "^24.6.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vite-plugin-monaco-editor": "^1.1.0"
  },
  "dependencies": {
    "3d-force-graph": "^1.79.0",
    "electron-tree-view": "^1.1.0",
    "monaco-editor": "^0.53.0",
    "three": "^0.180.0"
  },
  "build": {
    "files": [
      "dist/**/*",
      "out/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  }
}
